<% unless @totals.empty? %>
  <div class="table-responsive">
    <table class="table">
      <thead>
          <tr>
              <th scope="col">Date</th>
              <th scope="col">Distance</th>
              <th scope="col">Duration</th>
          </tr>
      </thead>
      <tbody>
          <%= render @totals %>
      </tbody>
    </table>
  </div>
  <div class="d-flex justify-content-center">
    <%== pagy_bootstrap_nav(@pagy) %>
  </div>
<% else %>
    <p>No results.</p>
<% end %>