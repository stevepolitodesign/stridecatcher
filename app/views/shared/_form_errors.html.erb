<% if object.errors.any? %>
    <div id="form_errors" class="alert alert-danger">
        <h5><%= pluralize(object.errors.count, "error") %> prevented this <%= object.class.name.downcase %> from being saved:</h5>
        <ul>
            <% object.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
        </ul>
    </div>
<% end %>